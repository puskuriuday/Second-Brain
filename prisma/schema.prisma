generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  username  String    @unique
  password  String
  contents  Content[]
}

model Content {
  id      String   @id @default(uuid()) @db.Uuid
  title   String
  link    String
  UserId  String   @db.Uuid
  user    User     @relation(fields: [UserId], references: [id])
}

model tags {
  id Int @default(autoincrement()) @id
  tag String @unique
}